{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiVersion": {
      "type": "string",
      "metadata": {
        "description": "Schema api version from parent template"
      }
    },
    "location": {
      "type": "string"
    },
    "storageAccountNamePrefix": {
      "type": "string"
    },
    "vmContainerName": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "sqlVMName": {
      "type": "string"
    },
    "sqlwVMName": {
      "type": "string"
    },
    "sqlVMSize": {
      "type": "string"
    },
    "witnessVMSize": {
      "type": "string"
    },
    "commonVMSize": {
      "type": "string"
    },
    "commonImagePublisher": {
      "type": "string"
    },
    "commonImageOffer": {
      "type": "string"
    },
    "commonImageSKU": {
      "type": "string"
    },
    "fswImagePublisher": {
      "type": "string"
    },
    "fswImageOffer": {
      "type": "string"
    },
    "fswImageSKU": {
      "type": "string"
    },
    "sqlImagePublisher": {
      "type": "string"
    },
    "sqlImageOffer": {
      "type": "string"
    },
    "sqlImageSKU": {
      "type": "string"
    },
    "sqlAvailabilitySetRef": {
      "type": "string"
    }
  },
  "variables": {
    "sqlStorageName": "[concat(parameters('storageAccountNamePrefix'), 'sql')]",
    "fwStorageName": "[concat(parameters('storageAccountNamePrefix'), 'fsw')]",
    "diagStorageName": "[concat(parameters('storageAccountNamePrefix'), 'diag')]"
  },
  "resources": [
    {
      "apiVersion": "[parameters('apiVersion')]",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('sqlVMName'), add(copyindex(),1))]",
      "copy": {
        "name": "sqlVirtualMachineLoop",
        "count": 2
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('sqlVMSize')]"
        },
        "availabilitySet": {
          "id": "[parameters('sqlAvailabilitySetRef')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('sqlVMName'), add(copyindex(),1))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('sqlImagePublisher')]",
            "offer": "[parameters('sqlImageOffer')]",
            "sku": "[parameters('sqlImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('sqlVMName'), add(copyindex(),1),'-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[concat(parameters('sqlVMName'), add(copyindex(),1),'-data-disk1')]",
              "caching": "None",
              "createOption": "Empty",
              "diskSizeGB": 1000,
              "lun": 0
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('sqlVMName'), add(copyindex(),1),'-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://',variables('diagStorageName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "apiVersion": "[parameters('apiVersion')]",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('sqlwVMName')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('witnessVMSize')]"
        },
        "availabilitySet": {
          "id": "[parameters('sqlAvailabilitySetRef')]"
        },
        "osProfile": {
          "computerName": "[parameters('sqlwVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('fswImagePublisher')]",
            "offer": "[parameters('fswImageOffer')]",
            "sku": "[parameters('fswImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('sqlwVMName'),'-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[concat(parameters('sqlwVMName'),'-data-disk1')]",
              "caching": "None",
              "createOption": "Empty",
              "diskSizeGB": 128,
              "lun": 0
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('sqlwVMName'),'-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',variables('diagStorageName'),'.blob.core.windows.net')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "result": {
      "value": "SQL Virtual Machines Provisioning achieved",
      "type": "string"
    }
  }
}