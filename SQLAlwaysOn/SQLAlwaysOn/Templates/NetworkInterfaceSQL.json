{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiVersion": {
      "type": "string",
      "metadata": {
        "description": "Schema api version from parent template"
      }
    },
    "sql1NICIPAddress": {
      "type": "string"
    },
    "sql2NICIPAddress": {
      "type": "string"
    },
    "sqlwNICIPAddress": {
      "type": "string"
    },
    "adPDCNICIPAddress": {
      "type": "string"
    },
    "adBDCNICIPAddress": {
      "type": "string"
    },
    "sql1NicName": {
      "type": "string"
    },
    "sql2NicName": {
      "type": "string"
    },
    "sqlwNicName": {
      "type": "string"
    },
    "adPDCNicName": {
      "type": "string"
    },
    "adBDCNicName": {
      "type": "string"
    },
    "TRZSubnetRef": {
      "type": "string"
    },
    "DMZSubnetRef": {
      "type": "string"
    },
    "sqlLBBEAddressPoolID": {
      "type": "string"
    },
    "dnsServers": {
      "type": "array",
      "metadata": {
        "Description": "DNS Servers configured on the NIC"
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('sql1NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('sql1NICIPAddress')]",
              "subnet": {
                "id": "[parameters('TRZSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('sqlLBBEAddressPoolID')]"
                }
              ]
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": "[parameters('dnsServers')]"
        }
      }
    },
    {
      "name": "[parameters('sql2NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('sql2NICIPAddress')]",
              "subnet": {
                "id": "[parameters('TRZSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('sqlLBBEAddressPoolID')]"
                }
              ]
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": "[parameters('dnsServers')]"
        }
      }
    },
    {
      "apiVersion": "[parameters('apiVersion')]",
      "location": "[resourceGroup().location]",
      "name": "[parameters('sqlwNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('sqlwNICIPAddress')]",
              "subnet": {
                "id": "[parameters('TRZSubnetRef')]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": "[parameters('dnsServers')]"
        }
      }
    }
  ],
  "outputs": {
    "result": {
      "value": "NetworkInterfaces Provisioning achieved",
      "type": "string"
    }
  }
}